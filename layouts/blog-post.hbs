{{> head }}
  <article class="h-entry">
    <header class="blog-post-header">
      <h1 class="p-name">{{ title }}</h1>
      {{#if date }}
      <p>
        Published <time class="dt-published" datetime="{{moment date format="YYYY-mm-dd"}}">{{moment date format="MMM D, YYYY"}}</time>
      </p>
      {{/if }}
    </header>
    {{{ contents }}}
  </article>
{{> foot }}